{
    "name": "union-v2-contracts",
    "version": "0.1.0",
    "description": "",
    "main": "index.js",
    "directories": {
        "lib": "lib"
    },
    "scripts": {
        "format": "prettier --write 'contracts/**/*.sol'",
        "format:check": "prettier --check 'contracts/**/*.sol'",
        "hh:compile": "yarn hardhat compile",
        "hh:test": "yarn hardhat test",
        "hh:sim": "yarn hardhat test --config hardhat-sim.config.ts",
        "task": "yarn hardhat --config hardhat-task.config.ts",
        "f:compile": "forge build",
        "f:test": "forge test -vvv",
        "clean": "forge clean && yarn hardhat clean && rm -rf ./typechain-types",
        "coverage": "./run-coverage.sh",
        "deploy:op": "yarn clean && yarn hardhat compile && CONFIG=optimism-goerli yarn hardhat --config hardhat-task.config.ts deploy:op --network optimism-goerli",
        "deploy:base-sepolia": "yarn clean && yarn hardhat compile && yarn hardhat --config hardhat-task.config.ts deploy --network base-sepolia"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:unioncredit/union-v2-contracts.git"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@eth-optimism/sdk": "^3.2.2",
        "@nomicfoundation/hardhat-chai-matchers": "^1.0.3",
        "@nomiclabs/hardhat-ethers": "^2.0.6",
        "@nomiclabs/hardhat-waffle": "^2.0.3",
        "@openzeppelin/contracts": "^4.8.0",
        "@openzeppelin/contracts-upgradeable": "^4.8.0",
        "@openzeppelin/hardhat-upgrades": "^1.17.0",
        "@rollup/plugin-commonjs": "^24.0.0",
        "@rollup/plugin-json": "^6.0.0",
        "@rollup/plugin-node-resolve": "^15.0.1",
        "@typechain/ethers-v5": "^10.1.0",
        "@typechain/hardhat": "^6.1.2",
        "@types/chai": "^4.3.3",
        "@types/mocha": "^9.1.1",
        "@types/node": "^18.0.1",
        "axios": "^1.2.1",
        "chai": "^4.3.6",
        "eth-permit": "^0.2.3",
        "ethers": "^5.6.7",
        "hardhat": "^2.22.0",
        "mocha": "^10.0.0",
        "ora": "5.0.0",
        "prettier": "^2.6.2",
        "prettier-plugin-solidity": "^1.0.0-beta.19",
        "rollup": "^3.10.1",
        "solidity-code-metrics": "^0.0.22",
        "solidity-coverage": "^0.7.21",
        "ts-generator": "^0.1.1",
        "ts-node": "^10.8.2",
        "typechain": "^8.1.0",
        "typescript": "^4.7.4"
    },
